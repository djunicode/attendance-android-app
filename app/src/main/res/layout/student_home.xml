<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/SmokeWhite"
    android:orientation="vertical">

    <LinearLayout
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txt_initials"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="32dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:textColor="@color/DarkGrey"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-9dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:paddingTop="4dp"
            android:text="name"
            android:visibility="gone"
            android:textColor="@color/SmokeWhite"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="32dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_mainPercent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                tools:text="Name"
                android:textColor="@color/SmokeWhite"
                android:textSize="24sp" />

            <TextView
                android:layout_marginTop="16dp"
                android:id="@+id/text_sap_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/SmokeWhite"
                android:textSize="18sp"
                tools:text="Computer Engineering" />

        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/empty_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/empty_screen_image"
                android:layout_margin="16dp"
                android:layout_gravity="center_horizontal"
                android:tint="@android:color/secondary_text_dark"
                android:src="@drawable/ic_info"
                android:layout_width="120dp"
                android:layout_height="120dp" />

            <TextView
                android:id="@+id/empty_screen_text"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textAlignment="center"
                android:text="@string/empty_screen_student_side"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <ListView
        android:visibility="gone"
        android:id="@+id/list_studentSubjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/SmokeWhite"
        android:dividerHeight="0dp" />
</LinearLayout>