<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/txt_subName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:text="AOA"
        android:textAlignment="center"
        android:textColor="@color/Grey"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txt_classRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_subName"
        android:layout_alignStart="@+id/txt_subName"
        android:layout_marginTop="0dp"
        android:text="Class 1A"
        android:textAlignment="center"
        android:textColor="@color/Grey"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/txt_classRoom"
        android:layout_below="@id/txt_classRoom"
        android:layout_marginTop="0dp"
        android:text="type"
        android:textAlignment="center"
        android:textColor="@color/Grey"
        android:textSize="13sp"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/txt_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_subName"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:paddingTop="4dp"
        android:text="S.E. A"
        android:textAlignment="center"
        android:textColor="@color/primaryColor"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txt_timing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_classRoom"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:text="8:00"
        android:textAlignment="center"
        android:textColor="@color/DarkGrey"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <ProgressBar
        android:id="@+id/pbar_cancel"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="132dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="56dp"
        android:layout_height="28dp"
        android:layout_below="@id/type"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="122dp"
        android:background="@drawable/btn_background_corners"
        android:backgroundTint="@color/errorWidgetColor"
        android:text="Cancel"
        android:textColor="@color/White"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btn_takeAttendance"
        android:layout_width="96dp"
        android:layout_height="28dp"
        android:layout_alignTop="@+id/btn_cancel"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_background_corners"
        android:backgroundTint="@color/primaryColor"
        android:text="Take Attendance"
        android:textColor="@color/White"
        android:textSize="10sp" />

    <ProgressBar
        android:id="@+id/pbar_take"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignTop="@+id/btn_cancel"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="49dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/img_attendanceTaken"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:layout_alignTop="@id/btn_takeAttendance"
        android:layout_alignStart="@id/type"
        android:src="@drawable/ic_check"
        android:visibility="invisible"
        android:layout_below="@id/type"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="1dp"
        android:background="#f0f0f0"
        android:layout_below="@id/btn_cancel"/>
</RelativeLayout>